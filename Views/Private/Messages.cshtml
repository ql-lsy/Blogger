    .bubble {
        background-color: #cecece;
        color: #000;
        padding: 10px;
        border-radius: 10px;
        max-width: calc(100% - 50px);
        word-wrap: break-word;
    }

    .chat_context {
        width: 100%;
        height: 100%;
        font-size: 14px;
        box-sizing: border-box;
        outline: none;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-width: 0px;
